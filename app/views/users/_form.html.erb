<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, id: :user_full_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :organisation %>
    <%= form.collection_check_boxes :organisation_ids, Organisation.all, :id, :abbr do |t| %>  
      <div class="collection-check-box" >
        <%= t.check_box %> <%= t.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :role_user_id %>
    <%= form.collection_check_boxes :role_ids, Role.all, :id, :title do |t| %>  
      <div class="collection-check-box" >
        <%= t.check_box %> <%= t.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
